<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="dk">

<head>
  <meta charset="utf-8">
  <link rel="dns-prefetch" href="https://identity.netlify.com">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or renderData.title or metadata.title }}</title>
  <script async src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  {% set css %}
    {% include "assets/css/app.css" %}
  {% endset %}
  <style>{{ css | cssmin | safe }}</style>
  {% set js %}
    {% include "assets/js/app.js" %}
  {% endset %}
  <script>{{ js | jsmin | safe }}</script>
</head>

<body>
	<header>
		<p><a href="{{ '/' | url }}">{{ metadata.title }}</a></p>
		<nav>
      {% set navPages = collections.all | eleventyNavigation %}
      <ul>
      {%- for entry in navPages %}
        <li>
          <a href="{{ entry.url | url }}"{% if entry.url == page.url %} data-current="current item"{% endif %}>{{ entry.title }}</a>
        </li>
      {%- endfor %}
      </ul>
    </nav>
	</header>

	<main>
		{{ layoutContent | safe }}
	</main>

	<footer>
    Footer
  </footer>

</body>
</html>
