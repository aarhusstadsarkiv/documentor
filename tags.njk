---
layout: layouts/_base.njk
permalink: /tags/{{ tag }}/
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
    - posts
renderData:
  title: "Tagged “{{ tag }}”"
---

<h1>Tagged “{{ tag }}”</h1>

<section>
	<ul>
		{%- for item in collections[tag] -%}
  			<li><a href="{{ item.url }}">{{ item.data.title }}</a></li>
		{%- endfor -%}
	</ul>
</section>

